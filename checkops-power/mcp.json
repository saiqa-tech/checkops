{
    "mcpServers": {
        "checkops-tools": {
            "command": "npx",
            "args": [
                "--yes",
                "@saiqa-tech/checkops@latest",
                "mcp-server"
            ],
            "env": {
                "NODE_ENV": "development",
                "DB_HOST": "${DB_HOST:-localhost}",
                "DB_PORT": "${DB_PORT:-5432}",
                "DB_NAME": "${DB_NAME}",
                "DB_USER": "${DB_USER}",
                "DB_PASSWORD": "${DB_PASSWORD}"
            },
            "disabled": true,
            "autoApprove": []
        }
    }
}